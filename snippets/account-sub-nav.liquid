<nav class="account-sub-nav">
  <ul class="account-sub-nav__list">
    <li class="account-sub-nav__list-item">
      <a class="account-sub-nav__list-link {% if request.path == routes.account_url %}account-sub-nav__list-link--active{% endif %}" href="{{ routes.account_url }}">{{ 'customer.account.dashboard' | t }}</a>
    </li>
    {% if customer.metafields.subscriptions.customer_string %}
      <li class="account-sub-nav__list-item">
        <!--BeginRechargeCode-->
        <a class="account-sub-nav__list-link" href="/tools/recurring/customer/{{customer.metafields.subscriptions.customer_string}}/subscriptions/">{{ 'customer.account.subscriptions' | t }}</a>
        <!--EndRechargeCode-->
      </li>
    {% endif %}
    <li class="account-sub-nav__list-item">
      <a class="account-sub-nav__list-link {% if request.path == routes.account_addresses_url %}account-sub-nav__list-link--active{% endif %}" href="{{ routes.account_addresses_url }}">{{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})</a>
    </li>
    <li class="account-sub-nav__list-item">
      <a class="account-sub-nav__list-link" href="{{ routes.account_logout_url }}">{{ 'customer.account.log_out' | t }}</a>
    </li>
  </ul>
</nav>