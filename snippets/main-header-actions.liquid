{% if classes == blank %}
  {% assign classes = '' %}
{% endif %}

<div class="main-header-actions {{ classes | join: ' ' }}">

  <a href="/search" class="main-header-actions__search">
    {% render 'icon-search' %}
    <span class="main-header-actions__search-label">
      {{ 'layout.search.title' | t }}
    </span>
  </a>

  {% if shop.customer_accounts_enabled %}
    <div class="main-header-actions__account">
      {% capture accountLink %}
        {% if customer %}
          {{ routes.account_url }}
        {% else %}
          {{ routes.account_login_url }}
        {% endif %}
      {% endcapture %}
      <a href="{{ accountLink }}" class="main-header-actions__account-link">
        {{ 'layout.customer.account' | t }}
      </a>
    </div>
  {% endif %}

  <a class="main-header-actions__cart {% if cart.item_count > 0 %}main-header-actions__cart--active{% endif %}" href="{{ routes.cart_url }}">
    <span class="main-header-actions__cart-label">{{ 'layout.cart.title' | t }}</span>
    <div class="main-header-actions__cart-count" data-cart-count><span>{{ cart.item_count }}</span></div>
  </a>

  {% render 'currency-switcher', classes: 'main-header-actions__currency-switcher' %}

  <button>
    Burger goes here
  </button>

</div>
