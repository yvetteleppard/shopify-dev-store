<header class="section article__header article-header">

  <a href="{{ blog.url }}">
    {{ 'blog.article.back_to_blog' | t: title: blog.title }}
  </a>

  <h1 class="article-header__title">{{ article.title }}</h1>

  {% if article.tags.size > 0 %}
    {% render 'article-tags' %}
  {% endif %}

  <time class="article-header__date">{{ article.published_at | time_tag: format: 'date' }}</time>

  <div class="article-header__author">{{ 'blog.article.by_author' | t: author: article.author }}</div>

  <p class="article-header__summary">
    {% if article.excerpt.size > 0 %}
      {{ article.excerpt }}
    {% else %}
      {{ article.content | strip_html | truncatewords: 30 }}
    {% endif %}
  </p>

  {% if article.image %}
    {% render 'image-component' with
      image: article.image,
      sizes: '100vw',
      classes: 'article-header__image objFit'
    %}
  {% endif %}
</header>