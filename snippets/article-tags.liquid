{% if classes == blank %}
  {% assign classes = '' %}
{% endif %}

<div class="{{ classes | join: ' ' }} article-tags">
  {% for tag in article.tags %}
    <a class="article-tags__tag" href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>{% unless forloop.last %}, {% endunless %}
  {% endfor %}
</div>