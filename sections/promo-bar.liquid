{%- if section.settings.enabled and section.settings.text != blank -%}
  <section class="promo-bar">
    <div class="promo-bar__inner">
      {%- if section.settings.link != blank -%}
        <a class="promo-bar__title" href="{{ section.settings.link }}">
          {{ section.settings.text | escape }}
        </a>
      {%- else -%}
        <span class="promo-bar__title">{{ section.settings.text | escape }}</span>
      {%- endif -%}
    </div>

    <button class="promo-bar__close">
      <span class="screenreader-text">{{ 'general.accessibility.close_promo_bar' | t }}</span>
    </button>
  </section>
{%- endif -%}

{% schema %}
{
  "name": "Promotional banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Show promotional bar",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link",
      "info": "Optional"
    }
  ]
}
{% endschema %}

